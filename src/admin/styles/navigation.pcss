.navigation {
    display: flex;
    align-items: center;
    margin-top: 70px;
    &__list {
      display: flex;
      height: 70px;
      margin: 0;
    }
    &__item {
      display: flex;
      align-items: center;
      height: 100%;
      margin-right: 30px;
      padding: 0 20px;
      border-bottom: 3px solid transparent;
      &:last-child {
        margin-right: 0;
      }
      &:hover {
        color: #383ace;
        border-bottom: 3px solid #383ace;
      }
    }
  }