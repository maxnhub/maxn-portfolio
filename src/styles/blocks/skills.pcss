.skills {
    background: url(../images/content/hands-bg.png) center center / cover no-repeat;
    min-height: 944px;
    position: relative;

    @include desktop {
        padding-top: 32.0625rem;
        min-height: 1060px;
    }

    @include tablets {
        padding-top: 8.6rem;
        min-height: 77rem;
    }

    &:after {
        content: "";
        background: url(../images/content/hands.png) 0% 100%/contain no-repeat;
        width: 97%;
        height: 100%;
        position: absolute;
        bottom: -5.5rem;
        left: 0.3125rem;

        @include half-desktop {
            width: 84%;
            height: 78%;
            position: absolute;
            bottom: -7rem;
            left: -5.3625rem;
        }

        @include quad-desktop {
            width: 84%;
            height: 63%;
            position: absolute;
            bottom: -7rem;
            left: -5.3625rem;
        
        }

        @include desktop {
            width: 57%;
            height: 54%;
            position: absolute;
            bottom: -4rem;
            left: -6.3625rem;
        }

        @include tablets {
            width: 48%;
            height: 48%;
            position: absolute;
            bottom: -5.3rem;
            left: 14.3rem;
            transform: rotate(270deg);
        }
    }

    &__info {
        align-items: center;
        display: flex;
        flex-direction: column;
        padding-top: 63px;
        margin-bottom: 5.25rem;

        @include desktop {
            padding-top: 0;
            margin-bottom: 92px;
        }

        @include tablets {
            margin-bottom: 3.75rem;
        }

        &-block {
            width: 39%;
            align-items: flex-start;
            display: flex;
            flex-direction: column;
            padding-left: 56px;

            @include desktop {
                width: 58%;
            }

            @include tablets {
                padding-left: 3.5rem;
                align-items: center;
                width: 83%;
            }
        }

        &-title {
            font-family: 'OpenSans', Helvetica, sans-serif;
            font-size: 31px; 
            color: #fff;
            font-weight: bold;
            margin-bottom: 52px;
            letter-spacing: 1px;

            @include tablets {
                line-height: 40px;
                width: 68%;
                text-align: center;
                margin-bottom: 1.25rem;
            }
        }

        &-text {
            font-family: 'OpenSans', Helvetica, sans-serif;
            font-size: 16px;
            line-height: 29px;
            color: #979595;
            font-weight: 600;

            @include tablets {
                text-align: center;
            }
        }
    }

    &__graphic {
        display: flex;
        justify-content: flex-end;
        padding-right: 7.6875rem;
        padding-bottom: 125px;

        @include desktop {
            padding-right: 1.6875rem;
            padding-bottom: 11.3125rem;
        }

        @include tablets {
            padding-right: 3.6875rem;
            padding-bottom: 0;
        }
    }

    &__row {
        margin-bottom: 40px;

        @include tablets {
            margin-bottom: 3.5rem;
        }

        &-title {
        font-family: 'OpenSans', Helvetica, sans-serif;
        font-size: 24px; 
        color: #fff;
        font-weight: bold;
        margin-bottom: 40px;
        letter-spacing: 0.8px;

        @include tablets {
            text-align: center;
            margin-bottom: 1rem;
        }
        }

        &:last-child {
            margin-bottom: 0;
        }
    }

    &__list {
        display: flex;

        & > .skills__item:last-child {
            margin-right: 0;
        }
    }

    &__item {
        margin-right: 44px;

        @include tablets {
            margin-right: 1.4rem;
        }

        &-graphic {
            position: relative;
            width: 150px;
            height: 150px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        &-text {
            position: absolute;
            font-family: 'OpenSans', Helvetica, sans-serif;
            font-size: 18px; 
            color: #979595;
            font-weight: bold;
            padding: 0 30px;
        }
    }

    &__img {
        max-width: 100%;
        max-height: 100%;
        width: 50%;
        position: absolute;
        left: -15%;
        bottom: -15%;
    }

    &__shape {
        width: 150px;
        height: 150px;
        transform: rotate(-90deg);
    }

    &__circle {
        fill: transparent;
        stroke-width: 10px;
        stroke: #484b4e;

        &--position--under {
            stroke-width: 2px;
        }

        &--position--above {
            stroke: #dc9322;
            stroke-dasharray: 327;
            stroke-dashoffset: 327;
            animation: fill 100s linear infinite;
            animation-play-state: paused;
        }
    }
}

.skills__circle--position--above[style="animation-delay: -100s"] {
    animation: initial;
    stroke-dashoffset: 0;
}

@keyframes fill {
    from {
        stroke-dashoffset: 327;
    }

    to {
        stroke-dashoffset: 0;
    }
}